<div class="space-y-4">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Pages</h1>
    <%= link_to 'New Page', new_page_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>

  <div class="grid gap-4">
    <% @pages.each do |page| %>
      <div class="bg-white p-4 rounded shadow">
        <h2 class="text-xl font-semibold"><%= page.title %></h2>
        <div class="mt-2 flex space-x-2">
          <%= link_to 'View', page, class: "text-blue-500 hover:text-blue-600" %>
          <%= link_to 'Edit', edit_page_path(page), class: "text-blue-500 hover:text-blue-600" %>
          <%= button_to 'Delete', page, method: :delete, class: "text-red-500 hover:text-red-600", data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
