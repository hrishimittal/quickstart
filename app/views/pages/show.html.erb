<div class="space-y-4">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold"><%= @page.title %></h1>
    <% if current_user&.admin? %>
      <div class="space-x-2">
        <%= link_to 'Edit', edit_page_path(@page.slug), class: "text-blue-500 hover:text-blue-600" %>
      </div>
    <% end %>
  </div>

  <div class="prose max-w-none">
    <%= @page.content %>
  </div>
</div>
